<view class="dev-info">
  <view>
    <text selectable="true" class="dev-name" aria-role="text" aria-label="设备名称">{{connectName}}</text>
  </view>
  <view>
    <text selectable="true" aria-role="text" aria-label="设备 ID">UUID: </text>{{deviceId}}
  </view>

  <view>
    <checkbox-group bindchange="checkBoxChange">
      <checkbox value="isListen" checked="{{isListen}}" />监听
    </checkbox-group>
    <text selectable="true">{{msg}}</text>
  </view>

  <view class="connect-success" >
    <form catchsubmit="sendInput" catchreset="formReset">
      <view class="weui-cell__bd" style="margin: 30rpx 0">
        <input class="weui-input" name="input" placeholder="P0N05" />
      </view>
      <view class="btn-area">
        <button style="margin: 30rpx 0" type="primary" formType="submit" aria-role="button" aria-label="发送输入框内的数据">发送</button>
      </view>
    </form>

    <view class="closeBLEConnection-box">
      <button class="closeBLEConnection" size="mini" bindtap="closeBLEConnection" aria-role="button" aria-label="断开连接">断开连接</button>
    </view>
  </view>
</view>