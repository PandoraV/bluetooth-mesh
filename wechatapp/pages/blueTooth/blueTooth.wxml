<view class="dev-info">
  <view>
    <text selectable="true" class="dev-name" aria-role="text" aria-label="设备名称">{{connectName}}</text>
  </view>
  <view>
    <text selectable="true" aria-role="text" aria-label="设备 ID">UUID: {{deviceId}} </text>
  </view>
  <view>
    <navigator class="btn-connection" url="../data/data?id={{deviceId}}&name={{connectName}}" hover-class="navigator-hover" aria-role="button" aria-label="连接该设备">查看数据</navigator>
  </view>

  <view>
    <checkbox-group bindchange="checkBoxChange">
      <checkbox value="isListen" checked="{{isListen}}" />监听
    </checkbox-group>
    <scroll-view scroll-y="true" class="dev-msg" enable-back-to-top="true">
      <text selectable="true" user-select="true" style="word-break:break-all;" aria-role="text" aria-label="来自设备的全部消息">{{msg}}</text>
    </scroll-view>
  </view>

  <view class="connect-success">
    <form catchsubmit="sendInput" catchreset="formReset">
      <view>
        <input class="weui-input" name="input" placeholder="T00AN" value="T00AN" />
      </view>
      <view>
        <button style="margin: 30rpx 0" type="primary" formType="submit" aria-role="button" aria-label="发送输入框内的数据">发送</button>
      </view>
    </form>

    <view class="closeBLEConnection-box">
      <button class="closeBLEConnection" size="mini" bindtap="closeBLEConnection" aria-role="button" aria-label="断开连接">断开连接</button>
    </view>
  </view>
</view>