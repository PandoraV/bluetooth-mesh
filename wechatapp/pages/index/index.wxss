/**index.wxss**/
.bt-search{
    margin: 10rpx;
}
.bt-news{
	margin-top:25rpx;
}

.list-item{
	height:500rpx;
	overflow: scroll;
}

.item-box{
	padding: 8rpx 10%;
	display: flex;
	align-items: center;
	justify-content: space-between;
	border-bottom: 1px solid rgb(219, 219, 219);
}

.btn-connection{
	width:100rpx;
	height:60rpx;  
	text-align: center;
	line-height:60rpx;
	color:#06ae56;
	border: 1rpx solid rgb(219, 219, 219);
	background-color: #eee;
	border-radius: 2rpx;
}

.about-us {
    display: flex;
    justify-content: center;
    align-content: flex-end;
    margin-left: 70rpx;
    margin-right: 70rpx;
    line-height: 70rpx;
    color: grey;
	border-bottom: 1px solid rgb(219, 219, 219);
    /* border-top: 1px solid rgb(219, 219, 219); */
    font-size: small;
}

.text-item {
    color: grey;
}

.copyright {
    display: flex;
    align-content: flex-end;
    justify-content: center;
    text-align: center;
    margin-top: 20rpx;
    color: gray;
    font-size: small;
}

.top-container {
    display: flex;
    flex-direction: column;
}

.bottom-container {
    position: fixed;
    bottom: 0%;
    padding-bottom: 30rpx;
    display: flex;
    flex-direction: column;
}